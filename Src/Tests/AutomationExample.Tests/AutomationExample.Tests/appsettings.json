{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "ConnectionStrings": {
        "ExampleDatabaseSql": "Server=localhost\\sqlexpress;Database=ExampleDatabase;Integrated Security=SSPI;Encrypt=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
        "ExampleDatabaseOracle": "Oracle Connection String",
        "ExampleDatabasePostgre": "Postgre Connection String",
        "ExampleDatabaseSqlite": "Sqlite Connection String"
    },
    "AppSettings": {
        "Environment": "Development",
        //Base web Url
        "BaseUrl": "http://localhost",
        // Base Uri route for the Url
        "BaseRoute": "/",
        "WebBrowserConfiguration": {
            // How long it will wait for the page to fully render before failing
            "PageLoadTimeoutInSeconds": 300,
            // Implicit Wait time for events on the page
            "ImplicitWaitInSeconds": 60,
            // Async Script timeout
            "JavascriptTimeoutInSeconds": 30,
            // WebDriver Command timeout
            "TimeoutCommandSecs": 30,
            // FireFox, Chrome, InternetExplorer, Edge
            "BrowserType": "Chrome",
            // Enable or Disable headless browser experience
            "HeadlessBrowser": false
        },
        "ApiClientConfiguration": {
            /**** API Client Configuration Settings */
            // How long the API will attempt to communicate before shutting down
            "TcpTimeoutInSeconds": 120,
            // How many times the API will attempt the same call
            "RetryLimit": 2
            /**** API Client Configuration Settings */
        }
    }
}